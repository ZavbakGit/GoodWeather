<?xml version="1.0" encoding="utf-8"?>

<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">

        <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent">


            <com.anit.goodweather.fragment.sensor.CustomSensorView
                    android:id="@+id/sen_view_light"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_margin="16dp"

            />


            <com.anit.goodweather.fragment.sensor.CustomSensorView
                    android:id="@+id/sen_view_temperature"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/sen_view_light"
                    android:layout_margin="16dp"

            />
            <com.anit.goodweather.fragment.sensor.CustomSensorView
                    android:id="@+id/sen_view_humidity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/sen_view_temperature"
                    android:layout_margin="16dp"

            />


            <com.anit.goodweather.customview.TransformCustomView
                    android:id="@+id/my_custom_view"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    app:cv_Color="@color/colorPrimary"
                    android:layout_below="@+id/sen_view_humidity"
                    android:layout_margin="16dp"

            />


        </RelativeLayout>
    </LinearLayout>

</ScrollView>
